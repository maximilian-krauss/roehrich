{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "baseBranchPatterns": [
    "main"
  ],
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "indirect"
      ],
      "enabled": true
    }
  ],
  "rangeStrategy": "pin",
  "automerge": true,
  "platformAutomerge": true,
  "minimumReleaseAge": "2d"
}
